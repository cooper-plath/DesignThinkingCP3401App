<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingFont">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/font_setting"
        android:textSize="48sp"
         />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Type Font Here"
        android:ems="10"
        android:inputType="number" />


    <Button
        android:id="@+id/callibri"
        android:layout_marginTop="20sp"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:text="Callibri"
        android:layout_gravity="center"
        android:textSize="24sp"
         />

    <Button
        android:id="@+id/comicSans"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:text="Comic Sans"
        android:textSize="24sp"
         />

    <Button
        android:id="@+id/ariel"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:text="Ariel"
        android:textSize="24sp"
         />

    <Button
        android:id="@+id/timesNew"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:text="Times New Roman"
        android:layout_gravity="center"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:text="Confirm"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:onClick="closeApp"
         />


</androidx.appcompat.widget.LinearLayoutCompat>